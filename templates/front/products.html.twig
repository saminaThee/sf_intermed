{% extends "front/base.html.twig" %}

{% block main %}


	{% for product in products %}
		<h2>
		<img src="{{ asset('image/' ~ product.image[0].src) }}" alt="{{ product.image[0].alt }}">
			<a href="{{ path("product_show", {'id' : product.id } ) }}">{{ product.name }}</a>
		</h2>
	{% endfor %}

{% endblock %}